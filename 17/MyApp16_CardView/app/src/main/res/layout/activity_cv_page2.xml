<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CV_Page2"
    android:background="#000"
    android:rowCount="3"
    android:columnCount="2">
    <!-- row1 col1-->
<androidx.cardview.widget.CardView
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_columnWeight="1"
    android:layout_rowWeight="1"
    app:cardCornerRadius="25dp"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:onClick="btnburger">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/burger"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:onClick="btnburger"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Burger"
            android:textStyle="italic|bold"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textColor="#FD9638"
            android:onClick="btnburger"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
    <!-- row1 col2-->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:cardBackgroundColor="#E91E63"
        app:cardCornerRadius="25dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/pizza"
                android:layout_gravity="center"
                android:layout_margin="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pizza"
                android:textStyle="italic|bold"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textColor="#fff"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <!-- row2 col1-->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:cardBackgroundColor="#4CAF50"
        app:cardCornerRadius="25dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/donut"
                android:layout_gravity="center"
                android:layout_margin="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Donut"
                android:textStyle="italic|bold"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textColor="#fff"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <!-- row2 col2-->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:cardBackgroundColor="#673AB7"
        app:cardCornerRadius="25dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/juice"
                android:layout_gravity="center"
                android:layout_margin="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Juice"
                android:textStyle="italic|bold"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textColor="#fff"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <!-- row3 col1-->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:cardBackgroundColor="#00BCD4"
        app:cardCornerRadius="25dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/pasta"
                android:layout_gravity="center"
                android:layout_margin="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pasta"
                android:textStyle="italic|bold"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textColor="#fff"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <!-- row3 col2-->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:cardBackgroundColor="#FEFEFE"
        app:cardCornerRadius="25dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/cookie"
                android:layout_gravity="center"
                android:layout_margin="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cookie"
                android:textStyle="italic|bold"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textColor="#B87850"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</GridLayout>